@page "/posts/{Id:guid}"

@using Ray.Blog.ThumbUps
@inherits BlogComponentBase

<Jumbotron Background="Background.Transparent" Margin="Margin.Is4.FromBottom">
    <JumbotronTitle Size="JumbotronTitleSize.Is4" TextAlignment="TextAlignment.Center">@PostDto.Title</JumbotronTitle>
    <JumbotronSubtitle>
        This is a simple hero unit, a simple jumbotron-style component for calling extra attention to featured content or information.
    </JumbotronSubtitle>
    <Divider></Divider>
    <Paragraph>
        @((MarkupString)_markdownHtml)
    </Paragraph>
</Jumbotron>

<Div TextAlignment="TextAlignment.Center">
    <ThumbUp SourceId="@Id" ThumbUpSourceType="@ThumbUpSourceType.Post" Size="Size.Large"></ThumbUp>
</Div>

<Comments PostId="@Id"></Comments>

