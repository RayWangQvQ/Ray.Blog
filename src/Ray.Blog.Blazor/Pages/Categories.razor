@page "/categories"

@inherits BlogComponentBase

<Alert Visible="true">
    <AlertMessage>这是分类页</AlertMessage>
</Alert>

<CardDeck>
    @foreach (var item in this.CategoryList)
    {
        <Card ColumnSize="ColumnSize.Is4">
            <CardBody>
                <CardTitle Size="5">
                    <CardLink Source="@($"/categoryId/{item.Id}/posts")">@item.Name</CardLink>
                </CardTitle>
                <CardText>
                    @item.Alias
                </CardText>
            </CardBody>
        </Card>
    }
</CardDeck>

