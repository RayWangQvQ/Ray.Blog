@page "/categories"

@inherits BlogComponentBase

<CardDeck>
    @foreach (var item in this.CategoryList)
    {
        <Card>
            <CardImage Source="@item.PicUrl" Alt="Pic"></CardImage>
            <CardBody>
                <CardTitle Size="5">
                    <CardLink Source="@($"/categoryId/{item.Id}/posts")">@item.Name</CardLink>
                </CardTitle>
                <CardText>
                    @item.Alias
                </CardText>
            </CardBody>
        </Card>
    }
</CardDeck>
